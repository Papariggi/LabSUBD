<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>addBook</servlet-name>
        <servlet-class>app.servlets.AddBookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addBook</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listOfBooks</servlet-name>
        <servlet-class>app.servlets.ListOfBooksServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>listOfBooks</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteBook</servlet-name>
        <servlet-class>app.servlets.DeleteBookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteBook</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sort</servlet-name>
        <servlet-class>app.servlets.SortServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>sort</servlet-name>
        <url-pattern>/sort</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>app.servlets.SearchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>enterSearch</servlet-name>
        <servlet-class>app.servlets.EnterSearchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>enterSearch</servlet-name>
        <url-pattern>/enterSearch</url-pattern>
    </servlet-mapping>

</web-app>